{% extends "ProyectoExtensionBundle::layout.html.twig" %}

{% block title %}Periodos{% endblock %}

{% block body %}
<h1>Listado de Periodos</h1>

<ul id="menu">
    <li>
        <a href="{{ path('periodo_new') }}">
            Crear un Periodo
        </a>
    </li>
</ul>
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('periodo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.fechaDesde %}{{ entity.fechaDesde|date('d-m-Y') }}{% endif %}</td>
            <td>{% if entity.fechaHasta %}{{ entity.fechaHasta|date('d-m-Y') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('periodo_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('periodo_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
