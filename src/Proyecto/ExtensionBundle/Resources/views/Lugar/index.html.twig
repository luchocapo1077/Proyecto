{% extends "ProyectoExtensionBundle::layout.html.twig" %}

{% block title %}Lugares{% endblock %}

{% block body %}
<h1>Listado de Lugares</h1>

<ul id="menu">
    <li>
        <a href="{{ path('lugar_new') }}">
            Crear un Lugar
        </a>
    </li>
</ul>
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Latitud</th>
            <th>Longitud</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('lugar_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.latitud }}</td>
            <td>{{ entity.longitud }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('lugar_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('lugar_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
