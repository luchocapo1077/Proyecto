{% extends "ProyectoExtensionBundle::layout.html.twig" %}

{% block title %}Lugares{% endblock %}

{% block body %}
<h1>Lugar</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th>Latitud</th>
            <td>{{ entity.latitud }}</td>
        </tr>
        <tr>
            <th>Longitud</th>
            <td>{{ entity.longitud }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('lugar') }}">
            Volver al listado
        </a>
    </li>
    <li>
        <a href="{{ path('lugar_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('lugar_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar</button>
        </form>
    </li>
</ul>
{% endblock %}
