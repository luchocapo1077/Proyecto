{% extends "ProyectoExtensionBundle::layout.html.twig" %}

{% block title %}Areas{% endblock %}

{% block body %}
    <h1>Editar Area</h1>

    <form action="{{ path('area_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Guardar</button>
        </p>
    </form>
    {% if icono != null %}       
            <tr><th>Icono</th>
                <td><img src="{{ asset(['uploads/markerIconos/', icono]|join) }}" alt="{{icono}} image not found" class="large" /></td>
            </tr>
    {% endif %}
    

    <ul class="record_actions">
        <li>
            <a href="{{ path('area') }}">
                Volver al listado
            </a>
        </li>
        <li>
            <form action="{{ path('area_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Borrar</button>
            </form>
        </li>
    </ul>
{% endblock %}   
